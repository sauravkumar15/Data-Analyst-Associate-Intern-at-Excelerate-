from flask import Flask, render_template, request
import csv

app = Flask(__name__)

def read_data():
    data = []
    with open('data.csv', 'r') as f:
        reader = csv.DictReader(f)
        for row in reader:
            data.append(row)
    return data

@app.route('/', methods=['GET', 'POST'])
def index():
    results = []
    error = ''
    search_type = None
    id_value = ''
    total_marks = 0

    if request.method == 'POST':
        search_type = request.form.get('search_type')
        id_value = request.form.get('id_value')
        data = read_data()
        if search_type == 'student':
            student_results = [row for row in data if row['Student id'] == id_value]
            if not student_results:
                error = "Invalid Student ID"
            else:
                results = [[row['Course id'], row['Marks']] for row in student_results]
                total_marks = sum(int(row['Marks']) for row in student_results)
        elif search_type == 'course':
            course_results = [row for row in data if row['Course id'] == id_value]
            if not course_results:
                error = "Invalid Course ID"
            else:
                results = [[row['Student id'], row['Marks']] for row in course_results]
    return render_template('index.html',
                           results=results,
                           search_type=search_type,
                           id_value=id_value,
                           total_marks=total_marks,
                           error=error)

if __name__ == '__main__':
    app.run()


