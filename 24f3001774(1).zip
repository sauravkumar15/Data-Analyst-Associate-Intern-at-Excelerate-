                {% endfor %}
                <tr><td>Total</td><td>{{ total_marks }}</td></tr>
            </table>
        {% elif search_type == 'course' %}
            <h3>Course Details</h3>
            <table border="1">
                <tr><th>Student ID</th><th>Marks</th></tr>
                {% for r in results %}
                    <tr><td>{{ r[0] }}</td><td>{{ r[1] }}</td></tr>
